    = stylesheet_link_tag 'application', 'media' => 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    %nav.navbar.navbar-light{:style => "background-color: #fdab9f;"}
      %h1.title Modern Beauty
    .container
      = render 'layouts/flash'
      %main#main
        = yield
        
    .footer
      =link_to "Home", root_path
      |
      =link_to "About", about_path
      |
      =link_to "Services", service_index_path
        - unless @action == 'login'
        = render "layouts/footer"
          