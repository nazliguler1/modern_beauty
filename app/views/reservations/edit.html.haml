%h2 Edit Reservation
= form_tag @reservation, :method => :put do |f|
  = label :reservation, :name, 'Name', :class => 'col-form-label'
  = text_field :reservation, :name, :class => 'form-control'
  
  = label :reservation, :location, 'Location', :class => 'col-form-label'
  = text_field :reservation, :location, :class => 'form-control'
  
  = label :reservation, :date, 'date', :class => 'col-form-label'
  = text_field :reservation, :date, :class => 'form-control'
  
  
  %br
  = submit_tag 'Update Reservation', :class => 'btn btn-primary'
  %br
  = link_to 'Cancel', reservations_path, :class => 'btn btn-secondary'